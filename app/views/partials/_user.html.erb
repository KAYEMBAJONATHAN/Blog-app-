<% if user.present? %>
<div class="user-card">
  <div class="user-photo-box">
    <img src="<%= user.photo %>" alt="User photo" class="user-photo">
  </div>
  <div class="user-details">
    <h3 class="user-name"><%= user.name %></h3>
    <small>Number of posts: <%= user.posts.length %></small>
  </div>
</div>
<% else %>
  <p>User not found.</p>
<% end %>
