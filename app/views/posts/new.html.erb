<%= form_with model: @post, url: posts_path do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
  
    <div class="field">
      <%= form.label :text %>
      <%= form.text_area :text %>
    </div>
  
    <%= form.submit "Create Post" %>
  <% end %>
  