<h1>User Details</h1>
<%= render 'partials/user', user: @user %>

<div class="bio-card container">
  <h3 class="bio-card-header">Bio</h3>
  <p><%= @user.bio %> </p>
</div>

<% @recent_posts.each_with_index do |post, index| %>
  <a href="/users/<%= @user.id %>/posts/<%= post.id %>">
  <div class="detailed-post-box container">
  <div class="username-and-counters">
    <p class="dp-username">Post #1 by <%= @user.name %></p>
    <small class="dp-counters">Comments: <%= @post.comments.length %>, Likes: <%= @post.likes.length %></small>
  </div>
  </a>

<% end %>

<div class="btn-div">
  <a href="/users/<%= @user.id %>/posts" class="see-all-posts">See all posts</a>
</div>
